.page-bind {
  padding: 50px 20px 0;

  .item-bind {
    position: relative;
    display: flex;
    align-items: center;
    padding: 7px 0;
    margin-bottom: 10px;
    bd-line(bottom, 1px, #eaeaea);

    .btn-code, .cut-time {
      width: 110px;
      height: 40px;
      line-height: 40px;
    }

    .cut-time {
      font-size: 14px;
      color: #999;
      text-align: center;
      border-radius: 20px;
      background-color: #eee;
    }

    .ipt {
      flex: 1;
    }
  }

  .i-phone, .i-lock {
    margin-right: 10px;
  }

  .i-phone {
    width: 20px;
    height: 20px;
    background-image: url('../../assets/images/phone.png');
  }

  .i-lock {
    width: 20px;
    height: 20px;
    background-image: url('../../assets/images/lock.png');
  }

  .btn-bind {
    margin: 40px 0;
    width:100%;
  }
}
